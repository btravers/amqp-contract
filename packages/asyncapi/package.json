{
  "name": "@amqp-contract/asyncapi",
  "version": "0.5.0",
  "description": "AsyncAPI specification generator for amqp-contract",
  "keywords": [
    "amqp",
    "asyncapi",
    "contract",
    "rabbitmq",
    "typescript"
  ],
  "homepage": "https://github.com/btravers/amqp-contract#readme",
  "bugs": {
    "url": "https://github.com/btravers/amqp-contract/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/btravers/amqp-contract.git",
    "directory": "packages/asyncapi"
  },
  "license": "MIT",
  "author": "Benoit TRAVERS <benoit.travers.fr@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "build": "tsdown src/index.ts --format cjs,esm --dts --clean",
    "build:docs": "typedoc",
    "dev": "tsdown src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@amqp-contract/contract": "workspace:*",
    "@orpc/openapi": "catalog:",
    "@standard-schema/spec": "catalog:"
  },
  "devDependencies": {
    "@amqp-contract/tsconfig": "workspace:*",
    "@amqp-contract/typedoc": "workspace:*",
    "@asyncapi/parser": "catalog:",
    "@orpc/arktype": "catalog:",
    "@orpc/valibot": "catalog:",
    "@orpc/zod": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "arktype": "catalog:",
    "tsdown": "catalog:",
    "typedoc": "catalog:",
    "typedoc-plugin-markdown": "catalog:",
    "typescript": "catalog:",
    "valibot": "catalog:",
    "vitest": "catalog:",
    "zod": "catalog:"
  }
}
