{
  "name": "@amqp-contract/core",
  "version": "0.6.0",
  "description": "Core utilities for AMQP setup and management in amqp-contract",
  "keywords": [
    "amqp",
    "contract",
    "core",
    "rabbitmq",
    "typescript"
  ],
  "homepage": "https://github.com/btravers/amqp-contract#readme",
  "bugs": {
    "url": "https://github.com/btravers/amqp-contract/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/btravers/amqp-contract.git",
    "directory": "packages/core"
  },
  "license": "MIT",
  "author": "Benoit TRAVERS <benoit.travers.fr@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.ts --format cjs,esm --dts --clean",
    "build:docs": "typedoc",
    "dev": "tsdown src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:watch": "vitest --project unit",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@amqp-contract/contract": "workspace:*",
    "amqp-connection-manager": "catalog:",
    "amqplib": "catalog:"
  },
  "devDependencies": {
    "@amqp-contract/testing": "workspace:*",
    "@amqp-contract/tsconfig": "workspace:*",
    "@amqp-contract/typedoc": "workspace:*",
    "@types/amqplib": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "tsdown": "catalog:",
    "typedoc": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
