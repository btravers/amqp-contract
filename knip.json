{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreExportsUsedInFile": true,
  "vitest": {
    "config": ["**/vitest.config.ts"]
  },
  "workspaces": {
    "*": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "tools/*": {
      "entry": ["*.json"]
    }
  },
  "ignore": ["coverage/**", "**/dist/**"],
  "ignoreDependencies": ["pino-pretty", "typedoc-plugin-markdown", "@amqp-contract/typedoc"]
}
