{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/*": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts", "!src/**/*.spec.ts"]
    },
    "packages/testing": {
      "entry": ["src/global-setup.ts"],
      "project": ["src/**/*.ts", "!src/**/*.spec.ts"]
    },
    "samples/*": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts", "!src/**/*.spec.ts"]
    },
    "tools/*": {
      "entry": ["*.json"]
    },
    "website": {
      "entry": ["docs/.vitepress/config.ts"]
    }
  },
  "ignore": ["coverage/**", "**/dist/**"],
  "ignoreDependencies": ["pino-pretty"]
}
