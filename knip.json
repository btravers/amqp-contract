{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/*": {
      "entry": ["src/index.ts", "src/**/*.spec.ts", "vitest.config.ts"],
      "project": ["src/**/*.ts"]
    },
    "samples/*": {
      "entry": ["src/**/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "website": {
      "entry": ["docs/.vitepress/config.ts"],
      "project": ["docs/.vitepress/**/*.ts"]
    }
  },
  "ignore": ["**/*.spec.ts", "**/vitest.config.ts", "dist/**"]
}
