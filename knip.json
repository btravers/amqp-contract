{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreExportsUsedInFile": true,
  "workspaces": {
    "packages/*": {
      "project": ["src/**/*.ts"]
    },
    "packages/core": {
      "ignoreDependencies": ["@opentelemetry/api"]
    },
    "examples/basic-order-processing-contract": {
      "entry": ["src/**/*.ts", "scripts/**/*.ts"],
      "project": ["src/**/*.ts", "scripts/**/*.ts"]
    },
    "examples/*": {
      "entry": ["src/**/*.ts"],
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["pino-pretty"]
    },
    "tools/tsconfig": {
      "ignore": ["**/*"]
    },
    "tools/typedoc": {
      "ignore": ["**/*"]
    },
    "tests": {
      "entry": ["src/**/*.spec.ts"],
      "project": ["src/**/*.ts"]
    },
    "docs": {
      "entry": ["scripts/*.ts"],
      "project": ["scripts/**/*.ts"]
    }
  },
  "ignore": ["coverage/**", "**/dist/**", "**/*.md"],
  "ignoreDependencies": [
    "typedoc-plugin-markdown",
    "@amqp-contract/typedoc",
    "@amqp-contract/tsconfig"
  ]
}
