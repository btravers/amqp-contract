{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreExportsUsedInFile": true,
  "vitest": {
    "config": ["**/vitest.config.ts"]
  },
  "workspaces": {
    "*": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "tools/*": {
      "entry": ["*.json"]
    },
    "packages/core": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["@opentelemetry/api"]
    },
    "tests": {
      "entry": ["src/**/*.spec.ts"]
    },
    "docs": {
      "ignoreDependencies": [
        "@amqp-contract/asyncapi",
        "@amqp-contract/client",
        "@amqp-contract/client-nestjs",
        "@amqp-contract/contract",
        "@amqp-contract/core",
        "@amqp-contract/testing",
        "@amqp-contract/worker",
        "@amqp-contract/worker-nestjs",
        "@amqp-contract/tsconfig"
      ]
    }
  },
  "ignore": ["coverage/**", "**/dist/**"],
  "ignoreDependencies": ["pino-pretty", "typedoc-plugin-markdown", "@amqp-contract/typedoc"]
}
