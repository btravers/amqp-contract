{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreExportsUsedInFile": true,
  "vitest": {
    "config": ["**/vitest.config.ts"]
  },
  "workspaces": {
    "*": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "tools/*": {
      "entry": ["*.json"]
    },
    "packages/core": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"],
      "ignoreDependencies": ["@opentelemetry/api"]
    },
    "tests": {
      "entry": ["src/**/*.spec.ts"]
    },
    "docs": {
      "entry": ["scripts/*.ts"]
    }
  },
  "ignore": ["coverage/**", "**/dist/**"],
  "ignoreDependencies": [
    "pino-pretty",
    "typedoc-plugin-markdown",
    "@amqp-contract/typedoc",
    "@amqp-contract/tsconfig"
  ]
}
