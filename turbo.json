{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "lint": {
      "dependsOn": ["^build"]
    },
    "format": {},
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "cache": false,
      "passThroughEnv": ["RABBITMQ_IMAGE"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:docs": {
      "dependsOn": ["^build"],
      "outputs": ["docs/**"]
    },
    "generate:asyncapi:json": {
      "dependsOn": ["^build"],
      "outputs": ["asyncapi.json"]
    },
    "generate:asyncapi:yaml": {
      "dependsOn": ["^build"],
      "outputs": ["asyncapi.yaml"]
    },
    "@amqp-contract/docs#build": {
      "dependsOn": ["^build", "^build:docs"],
      "outputs": [".vitepress/dist/**"]
    }
  }
}
